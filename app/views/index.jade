//- include index.html
doctype html
html
head
    title Document Search
    meta(charset='UTF-8')
    meta(name='description' content='todo')
    meta(name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0')
    link(rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css")
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/classic.date.css')

body
    #contentWrap
        #form
            form
                #innerForm
                    input#inputSearch(placeholder="Enter all your keywords")
                    br
                    #bottomForm
                        select#userPrivilege(name="users")
                            each user in roles
                                option(value=user.group_id)= user.group_name
                            
                        button#submitButton
                            img#buttonSearch(src="/images/search.png")
                    #advancedResearch
                        button#buttonAdvancedResearch(class="btn btn-success") Advanced Research
                        #parametersAdvancedResearch
                            select#filterResults(class="spaceBetween")
                                option(value=0) All Results
                                option(value=1) Exact Words
                            select#typePreference(class="spaceBetween")
                                option(value=0) All Types
                                option(value=1) Bulletin Board
                                option(value=2) PDF
                                option(value=3) DOCX
                            label Order by
                            select#orderPreference(class="spaceBetween")
                                option(value=0) Relevance
                                option(value=1) Alphabetical
                                option(value=2) Date Asc
                                option(value=3) Date Desc
                            select#datePreference(class="spaceBetween")
                                option(value=0) All Dates
                                option(value=1) Custom
                            #chooseDates
                                input#beginning(placeholder = "Beginning date : dd/mm/yyyy")
                                input#end(placeholder = "End date : dd/mm/yyyy")
                             
                            
