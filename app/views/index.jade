//- include index.html
doctype html
html
head
    title Document Search
    meta(charset='UTF-8')
    meta(name='description' content='todo')
    meta(name='viewport' content='width=device-width, initial-scale=1.0, maximum-scale=1.0')
    link(rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css")
    link(rel='stylesheet', href='/stylesheets/style.css')

body
    #contentWrap
        #form
            form
                #innerForm
                    input#inputSearch(placeholder="Enter all your keywords")
                    br
                    #bottomForm
                        select#userPrivilege(name="users")
                            each user in roles
                                option(value=user.group_id)= user.group_name
                            
                        button#submitButton
                            img#buttonSearch(src="/images/search.png")
                    #advancedResearch
                        button#buttonAdvancedResearch(class="btn btn-success") Advanced Research
                        #parametersAdvancedResearch
                            select#filterResults(class="spaceBetween")
                                option(value="allResults") All Results
                                option(value="exactWords") Exact Words
                            select#typePreference(class="spaceBetween")
                                option(value="allTypes") All Types
                                option(value="babillard") Bulletin Board
                                option(value="pdf") PDF
                                option(value="docx") DOCX
                            label Order by
                            select#orderPreference(class="spaceBetween")
                                option(value="relevance") Relevance
                                option(value="alphabetical") Alphabetical
                            select#datePreference(class="spaceBetween")
                                option(value="allDate") All Dates
                                option(value="custom") Custom
                                
                                
